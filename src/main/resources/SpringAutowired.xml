<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" 
	xmlns:context="http://www.springframework.org/schema/context"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
	http://www.springframework.org/schema/beans/spring-beans-3.0.xsd
	http://www.springframework.org/schema/context
	http://www.springframework.org/schema/context/spring-context-3.0.xsd">
	
	<context:component-scan base-package="com.yudi.tutor.SpringCore"/>
	
	<bean id="customerBean" class="com.yudi.tutor.SpringCore.Common.Customer" 
			init-method="initIt" destroy-method="cleanUp">
		<property name="customer2" ref="customer2Bean" />
		<property name="action" value="buy" />

	</bean>
	<bean id="customer2Bean" class="com.yudi.tutor.SpringCore.Cons.Ambigu.Customer2">
		<property name="name" value="Yudi" />
		<property name="address" value="mampang" />
		<property name="age" value="23" />
	</bean>
</beans>